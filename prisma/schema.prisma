generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Subscriber {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String? // opcjonalnie
  status       String   @default("active") // lub enum, np. active/unsubscribed
  mailerLiteId String?  @unique
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  groups SubscriberGroup[]
  fields SubscriberFieldValue[]
}

model Group {
  id           String   @id @default(cuid())
  name         String
  mailerLiteId String?  @unique
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  subscribers SubscriberGroup[]
}

model SubscriberGroup {
  subscriberId String
  groupId      String
  addedAt      DateTime @default(now())

  subscriber Subscriber @relation(fields: [subscriberId], references: [id])
  group      Group      @relation(fields: [groupId], references: [id])

  @@id([subscriberId, groupId])
}

model CustomField {
  id           String   @id @default(cuid())
  key          String   @unique // np. "company" / "first_name"
  label        String
  type         String // text, number, date, boolean ...
  mailerLiteId String?  @unique
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  values SubscriberFieldValue[]
}

model SubscriberFieldValue {
  id            String @id @default(cuid())
  subscriberId  String
  customFieldId String
  value         String // trzymaj jako string, parsuj w UI wg type

  subscriber  Subscriber  @relation(fields: [subscriberId], references: [id])
  customField CustomField @relation(fields: [customFieldId], references: [id])

  @@unique([subscriberId, customFieldId])
}
